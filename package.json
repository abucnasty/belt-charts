    "chartjs-plugin-annotation": "^3.1.0",
    "commander": "^14.0.0",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "glob": "^11.0.3",
    "skia-canvas": "^3.0.6"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^22.18.8",
